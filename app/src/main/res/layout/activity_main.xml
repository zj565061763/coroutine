<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_sample_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleScope"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_sample_mutator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleMutator"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_sample_continuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleContinuation"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_sample_mutable_flow_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleMutableFlowStore"
        android:textAllCaps="false" />

</LinearLayout>